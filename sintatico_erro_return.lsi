int is_even(int num) {
  if (num % 2 == 0) {
    return 1;
  } else {
    return 0;
}

int main() {
  int number = 42;
  
  if (is_even(number)) {
    print(number, "is even");
  } else {
    print(number, "is odd");
  }
  
  int a = 15;
  int b = 27;
  int c = a + b;
  
  print("The sum of", a, "and", b, "is", c);
  
  return 0;
}
